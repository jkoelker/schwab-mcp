{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "labels": ["dependencies"],
  "minimumReleaseAge": "7 days",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 9am on wednesday"]
  },
  "packageRules": [
    {
      "matchManagers": ["pip_requirements", "pip-compile", "poetry", "pep621"],
      "groupName": "python dependencies"
    }
  ]
}
